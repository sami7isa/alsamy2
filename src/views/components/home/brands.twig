{#
| Variable                       | Type    | Description                                                                  |
|--------------------------------|---------|------------------------------------------------------------------------------|
| component                      | object  | Contains merchant settings for fields from twilight.json `component` section |
| component.brands               | Brand[] | list of selected brands @see views/pages/brands/single.twig                  |
| position                       | int     | Sorting number start from zero                                               |
#}
<section class="s-block s-block--logos-slider s-block--full-bg bg-white pt-8 sm:pt-12 pb-8 sm:pb-20 overflow-hidden">
  <div class="container">
    {% if component.title or component.show_all %}
      <div class="s-block__title">
        {% if component.title %}
          <div class="right-side">
            <h2>{{ component.title }}</h2>
          </div>
        {% endif %}
      </div>
    {% endif %}
    <div class="relative w-full overflow-hidden">
        <div class="flex flex-col gap-4 lg:gap-8">
            {% for i in range(0, component.brands|length, 5) %}
              <div class="flex space-x-4 {% if loop.index is even %}animate-marquee{% else %}animate-marquee-reverse{% endif %}">
                  {% for brand in component.brands[i:i+5] %}
                      <a href="{{ brand.url }}" class="brand-item">
                          <img class="max-h-full" width="120" height="120" src="{{ brand.logo }}" alt="{{ brand.name }}"/>
                      </a>
                  {% endfor %}
              </div>
            {% endfor %}
        </div>
    </div>
</div>
</section>