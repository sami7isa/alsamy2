<footer class="store-footer">
	<div aria-label="footer" class="store-footer__inner flex flex-col items-center text-center">
		<div class="container grid grid-col-1 lg:grid-cols-6 gap-8 lg:gap-6 justify-center">
			<a class="navbar-brand flex justify-center items-center mx-auto" href="{{ store.url }}">
				<img class="logo" fetchpriority="high" width="100%" height="100%" loading="eager" src="{{ store.logo }}" alt="{{ store.name }} logo">				 
		    </a> 
		  <div class="lg:col-span-2 rtl:lg:pl-20 ltr:lg:pr-20 mx-auto">
			<a href="{{ link('/') }}" class="flex justify-center items-center m-0">
			  <h3>{{store.name}}</h3>
			</a>
			{% if store.description %}
			  <p class="max-w-sm leading-6 mb-6">
				{{ store.description|raw }}
			  </p>
			{% endif %} 	 	 
		<div class="flex justify-center items-center gap-2">
		  <salla-social class="mb-6"></salla-social> 
			<a href="https://wa.me/9668001111210" target="_blank" class="mb-4">
				<i class="fab fa-whatsapp text-3xl icon-social"></i>
			</a>
			<a href="https://www.tiktok.com/SallaPartners/" target="_blank" class="mb-4">
				<i class="fab fa-tiktok text-3xl icon-social"></i>
			</a>
		  </div>	 
		<div class="mx-auto">	 
			<h3>روابط مهمة</h3>
			<salla-menu source="footer"></salla-menu>		  
		</div> 
		<div class="mx-auto">	
			<h3></h3>	 
			<salla-contacts></salla-contacts>
	    </div>	 
		  {% if store.settings.tax.number %}
			<div class="flex rtl:space-x-reverse space-x-2 items-center justify-center">
			  {% if store.settings.tax.certificate %}
				<a class="load-img-onclick" data-modal-id="modal-value-tax" href="#/" alt="{{ store.settings.tax.number }}">
				  <img width="100%" height="100%" src="{{ 'images/s-empty.png' | cdn }}" data-src="{{'images/tax.png' | cdn(70,70)}}" class="lazy w-10 rounded-sm hover:opacity-80 transition-opacity" alt="value added tax">
				</a>
			  {% endif %}
			  <div>
				<p class="text-sm text-text-grey mb-1">{{ trans('common.elements.tax_number') }}</p>
				<b class="text-sm">{{ store.settings.tax.number }}</b>
			  </div>
			</div>  
			{% if store.settings.tax.certificate %}
			  <salla-modal sub-title-first sub-title="{{ trans('common.elements.tax_number') }}" modal-title="{{ store.settings.tax.number }}" id="modal-value-tax">
				<div class="flex justify-center max-w-full">
				  <img class="w-full logo-footer" loading="lazy" 
				  src="{{ 'images/s-empty.png' | cdn }}" 
				  data-src="{{ store.settings.tax.certificate }}" 
				  alt="{{ store.settings.tax.number }}"/>
				</div>
			  </salla-modal>
			{% endif %}
		  {% endif %}
		</div>  
		<salla-apps-icons class="lg:col-span-2 rtl:lg:pr-20 ltr:lg:pl-20 mx-auto"></salla-apps-icons>  
	  </div>
	</div>  
	<div class="md:flex flex-col items-center justify-center py-4 container text-center">
	  <span class="text-sm copyright-text">{% hook copyright %}</span>
	  <salla-payments></salla-payments>
	</div>  
	<span class="hidden bottom-2 rtl:pl-24 ltr:pr-24 md:grid-cols-3 opacity-40"></span>
</footer>